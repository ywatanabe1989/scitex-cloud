{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "rootDir": "./static/ts",
    "outDir": "./static/js",
    "baseUrl": "./static/ts",
    "paths": {
      "@/*": ["*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@writer/*": ["writer/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["static/ts/**/*"],
  "exclude": ["node_modules", "static/js", "**/node_modules/**"]
}

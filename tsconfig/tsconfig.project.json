{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "../apps/project_app/static/project_app/js",
    "baseUrl": "..",
    "paths": {
      "@/types": ["static/shared/ts/types/index.ts"],
      "@/types/*": ["static/shared/ts/types/*"],
      "@/utils": ["static/shared/ts/utils/index.ts"],
      "@/utils/*": ["static/shared/ts/utils/*"]
    }
  },
  "include": [
    "../apps/project_app/static/project_app/ts/**/*",
    "../static/shared/ts/types/**/*",
    "../static/shared/ts/utils/**/*"
  ]
}

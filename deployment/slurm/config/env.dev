# SLURM Environment Configuration - Development (WSL)
# Source: deployment/slurm/config/env.dev

# Cluster identification
export SLURM_CLUSTER_NAME="scitex-dev"
export SLURM_NODE_NAME="$(hostname -s)"  # Auto-detect hostname

# Hardware specs (adjust to your dev machine)
export SLURM_NODE_CPUS="16"
export SLURM_NODE_MEMORY="24000"  # MB (24GB actual)

# Resource limits per user
export SLURM_DEFAULT_MEM_PER_CPU="2000"  # MB
export SLURM_MAX_MEM_PER_CPU="4000"      # MB

# Logging
export SLURM_LOG_LEVEL="info"

# Accounting
export SLURM_ACCOUNTING_STORAGE="accounting_storage/none"  # No DB in dev

# Environment
export SCITEX_ENV="development"

# EOF

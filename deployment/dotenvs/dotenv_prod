#!/bin/bash
# -*- coding: utf-8 -*-
# SciTeX Cloud - Production Environment Variables
# This file is sourced by scripts/switch_env.sh

# Only show message if in interactive shell or explicitly requested
if [ -t 1 ] || [ "${SCITEX_SHOW_ENV_MESSAGE:-}" = "1" ]; then
    echo -e "\033[0;31mâœ“ Production environmental variables for SCITEX_CLOUD_* loaded\033[0m"
fi

# ----------------------------------------
# Django Settings
# ----------------------------------------
export DJANGO_SETTINGS_MODULE=config.settings.settings_prod

# ----------------------------------------
# Django Secret Key
# ----------------------------------------
export SCITEX_CLOUD_DJANGO_SECRET_KEY="${SCITEX_EMAIL_PASSWORD}"

# ----------------------------------------
# Database - Production
# ----------------------------------------
export SCITEX_CLOUD_DB_NAME_PROD=scitex_cloud_prod
export SCITEX_CLOUD_DB_USER_PROD=scitex_prod
export SCITEX_CLOUD_DB_PASSWORD_PROD="${SCITEX_EMAIL_PASSWORD}"
export SCITEX_CLOUD_DB_HOST_PROD=localhost
export SCITEX_CLOUD_DB_PORT_PROD=5432

# ----------------------------------------
# Logging
# ----------------------------------------
export SCITEX_LOGGING_LEVEL=${SCITEX_LOGGING_LEVEL:-warning}

# ----------------------------------------
# Security
# ----------------------------------------
export SCITEX_CLOUD_ALLOWED_HOSTS="scitex.ai,www.scitex.ai,localhost"

# ----------------------------------------
# Integration
# ----------------------------------------
# Gitea
export SCITEX_CLOUD_GITEA_URL_PROD="https://git.scitex.ai"
export SCITEX_CLOUD_GITEA_API_URL_PROD="https://git.scitex.ai/api/v1"
export SCITEX_CLOUD_GITEA_TOKEN_PROD="${SCITEX_CLOUD_GITEA_TOKEN_PROD:-}"  # Set after Gitea setup

# ----------------------------------------
# SciTeX Scholar Search - Production
# ----------------------------------------
export SCITEX_USE_CACHE=True
export SCITEX_MAX_WORKERS=8  # Higher for production (more throughput)
export SCITEX_TIMEOUT_PER_ENGINE=30  # Standard timeout
export SCITEX_ENGINES="CrossRef,PubMed,Semantic_Scholar,arXiv,OpenAlex"  # All engines
export SCITEX_DEFAULT_MODE=parallel  # Parallel mode for speed

# EOF

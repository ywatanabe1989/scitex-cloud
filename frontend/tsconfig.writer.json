{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "rootDir": "..",
    "outDir": "../apps/writer_app/static/writer_app/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "..",
    "paths": {
      "@/types": ["static/ts/types/index.ts"],
      "@/types/*": ["static/ts/types/*"],
      "@/utils": ["static/ts/utils/index.ts"],
      "@/utils/*": ["static/ts/utils/*"]
    }
  },
  "include": [
    "../apps/writer_app/static/writer_app/ts/**/*",
    "../static/ts/types/**/*",
    "../static/ts/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "../apps/writer_app/static/writer_app/js",
    "../static/js"
  ]
}

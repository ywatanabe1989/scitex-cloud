# SciTeX Cloud - Docker Environment Variables
# Copy this to .env and modify as needed

# Django
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production-use-python-secrets-token-urlsafe
ALLOWED_HOSTS=localhost,127.0.0.1,web

# Database (Docker Compose service name: db)
# IMPORTANT: Use 'db' not 'localhost' for SCITEX_CLOUD_DB_HOST_DEV
DATABASE_URL=postgresql://scitex:scitex_dev_password@db:5432/scitex_cloud
SCITEX_CLOUD_DB_HOST_DEV=db
SCITEX_CLOUD_DB_PORT_DEV=5432
SCITEX_CLOUD_DB_NAME_DEV=scitex_cloud
SCITEX_CLOUD_DB_USER_DEV=scitex
SCITEX_CLOUD_DB_PASSWORD_DEV=scitex_dev_password

# Redis (Docker Compose service name: redis)
REDIS_URL=redis://redis:6379/0

# Email (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Environment
SCITEX_CLOUD_ENV=development
DJANGO_SETTINGS_MODULE=config.settings.settings_dev

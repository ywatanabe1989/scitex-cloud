/* Ensure consistent header styling across all pages */
.site-header {
  background-color: var(--primary-color) !important;  /* Using !important to override any other styles */
  padding: var(--spacing-md) 0;
  color: white;
  box-shadow: var(--box-shadow-sm);
}

.site-header .container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* Ensure consistent logo styling */
.site-logo {
  font-size: 1.5rem;
  font-weight: 700;
  color: white !important;
  text-decoration: none;
  margin-right: var(--spacing-md);
}

.site-logo:hover {
  color: white !important;
}

/* Consistent nav link styling */
.site-navigation ul {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
  align-items: center;
  height: 40px; /* Fixed height for navigation */
}

.site-navigation li {
  height: 100%;
  margin: 0 var(--spacing-sm);
  position: relative;
  display: flex;
  align-items: center;
}

.site-navigation a,
.site-navigation .dropdown-toggle {
  display: flex;
  align-items: center;
  height: 100%;
  color: white !important;
  text-decoration: none;
  font-weight: 500;
  padding: 0 var(--spacing-sm);
  position: relative;
  transition: color var(--transition-normal);
}

.site-navigation a:hover,
.site-navigation .dropdown-toggle:hover {
  color: var(--secondary-color) !important;
}

.site-navigation a.active {
  color: var(--secondary-color) !important;
}

/* Dropdown menu styling */
.dropdown-menu {
  background-color: white;
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow-md);
  padding: var(--spacing-xs) 0;
  min-width: 200px;
  z-index: 1000;
  margin-top: 5px;
}

.dropdown-item {
  display: block;
  padding: var(--spacing-xs) var(--spacing-md);
  color: var(--gray-800) !important;
  text-decoration: none;
  transition: background-color var(--transition-normal);
  font-weight: 400;
}

.dropdown-item:hover {
  background-color: var(--gray-100);
  color: var(--primary-color) !important;
}

/* Login/Signup buttons */
.header-actions {
  display: flex;
  gap: var(--spacing-xs);
  align-items: center;
  height: 40px;
}

.header-actions .btn {
  border-radius: var(--border-radius);
  padding: var(--spacing-xs) var(--spacing-sm);
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 32px;
}

.header-actions .btn-outline-primary {
  border: 1px solid white;
  color: white !important;
  background-color: transparent;
}

.header-actions .btn-outline-primary:hover {
  background-color: rgba(255, 255, 255, 0.2);
}

.header-actions .btn-secondary {
  background-color: var(--secondary-color);
  border-color: var(--secondary-color);
  color: white !important;
}

.header-actions .btn-secondary:hover {
  background-color: var(--secondary-dark);
  border-color: var(--secondary-dark);
}

.header-actions .btn-success {
  background-color: var(--success-color);
  border-color: var(--success-color);
  color: white !important;
}

.header-actions .btn-success:hover {
  background-color: var(--success-dark, #218838);
  border-color: var(--success-dark, #218838);
}

.header-actions .btn-dark {
  background-color: #343a40;
  border-color: #343a40;
  color: white !important;
}

.header-actions .btn-dark:hover {
  background-color: #23272b;
  border-color: #23272b;
}

.header-actions .btn-sm {
  font-size: 0.875rem;
}